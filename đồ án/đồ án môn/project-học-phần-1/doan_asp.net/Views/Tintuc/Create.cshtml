@model doan_asp.net.Models.Tintuc

@{
    ViewData["Title"] = "Create";
   
}

<div class="row" style="width:98%;">
    <div>
        <h2>Thêm tin tức</h2>
    </div>
    <div class="recent-sales box" >
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label  asp-for="Tieude" class="control-label" style="margin-right:13px"></label>
                <input style="border-radius:3px 4px ; padding:20px;margin-bottom :5px" asp-for="Tieude" class="form-control" />
                <span asp-validation-for="Tieude" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Noidung" class="control-label"></label>
                <input style="border-radius: 3px 4px; padding: 20px; margin-bottom: 5px"  asp-for="Noidung" class="form-control" />
                <span asp-validation-for="Noidung" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Hinhanh" class="control-label"></label>
                <input style="border-radius: 3px 4px; padding: 20px; margin-bottom: 5px" asp-for="Hinhanh" class="form-control" />
                <span asp-validation-for="Hinhanh" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit"  style=" padding: 5px; background-color: #0A2558; color: white; font-family: Tahoma; border-radius: 10px 20px" > Thêm tin tức </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
